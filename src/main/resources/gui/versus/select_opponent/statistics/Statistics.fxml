<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="mainPane" prefHeight="132.0" prefWidth="132.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-border-color: black;">
                     <children>
                              <ImageView fx:id="ivAvatar" fitHeight="128.0" fitWidth="128.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
               </children>
            </HBox>
                <Label fx:id="lbName" text="Имя">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="lbNumberOfGames" text="Всего игр:" textFill="#4242ff">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lbNumberOfWins" text="Побед:" textFill="#1ba429">
                      <font>
                          <Font name="System Bold" size="12.0" />
                      </font>
                  </Label>
                  <Label fx:id="lbNumberOfLoses" text="Поражений:" textFill="#da2929">
                      <font>
                          <Font name="System Bold" size="12.0" />
                      </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
