<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.versus.VersusController">
   <children>
      <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="100" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

         <children>
             <GridPane>
                 <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                 </columnConstraints>
                 <rowConstraints>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     <RowConstraints minHeight="10.0" prefHeight="30.0" maxHeight="30" vgrow="SOMETIMES" />
                 </rowConstraints>

                 <children>
                     <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                         <children>
                             <Label text="Выберите оппонентов:" textAlignment="CENTER" wrapText="true">
                                 <font>
                                     <Font name="System Bold" size="12.0" />
                                 </font></Label>
                             <ComboBox fx:id="cbFirstOpp" maxWidth="Infinity" onAction="#showOpponentsResult" />
                             <Label alignment="CENTER" maxWidth="Infinity" text="VS" textAlignment="CENTER">
                                 <VBox.margin>
                                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </VBox.margin>
                                 <font>
                                     <Font name="System Bold" size="12.0" />
                                 </font></Label>
                             <ComboBox fx:id="cbSecondOpp" maxWidth="Infinity" onAction="#showOpponentsResult" />
                         </children>
                     </VBox>

                     <Button GridPane.columnIndex="0" GridPane.rowIndex="1" text="Назад" maxWidth="Infinity" maxHeight="Infinity"
                        fx:id="btnBack" onAction="#btnBack_click"/>
                 </children>
             </GridPane>


            <AnchorPane fx:id="contentPane" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
