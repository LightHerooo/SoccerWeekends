<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainController">
   <children>
      <GridPane style="-fx-background-color: #336600;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="100" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

          <children>
            <VBox alignment="CENTER" maxWidth="400.0" prefHeight="200.0" prefWidth="100.0" style="-fx-border-width: 5; -fx-border-color: white;" GridPane.halignment="CENTER">
               <children>
                    <Label text="Soccer Weekends" textFill="WHITE">
                     <font>
                        <Font name="Bank Gothic Medium BT" size="36.0" />
                     </font>
                  </Label>
                   <Label text="Соревнуйтесь с друзьями в футбольных состязаниях!" textFill="WHITE" />
               </children>
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
            </VBox>
            <VBox alignment="CENTER" maxWidth="400.0" prefHeight="200.0" prefWidth="100.0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                <children>
                    <Button fx:id="btnStart" maxWidth="Infinity" onAction="#btnStart_click" text="Начать">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                    </Button>
                    <Button fx:id="btnSettings" maxWidth="Infinity" onAction="#btnSettings_click" text="Настройки">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                    </Button>
                    <Button fx:id="btnExit" maxWidth="Infinity" onAction="#btnExit_click" text="Выход">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                    </Button>
                </children>
            </VBox>
          </children>
      </GridPane>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>
